<xsd:schema
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:bgf="http://planet-sl.org/bgf"
  xmlns:ltr="http://planet-sl.org/ltr"
  targetNamespace="http://planet-sl.org/ltr">

  <xsd:annotation>
    <xsd:documentation>
      The BGF Tree Format
    </xsd:documentation>
  </xsd:annotation>
  
  <xsd:import namespace="http://planet-sl.org/bgf" schemaLocation="bgf.xsd"/>

  <xsd:element name="tree">
    <xsd:complexType>
      <xsd:choice>
        
        <xsd:element name="epsilon">
          <xsd:complexType/>
        </xsd:element>
        
        <xsd:element name="any">
          <xsd:complexType mixed="true">
            <xsd:sequence minOccurs="0" maxOccurs="unbounded">
              <xsd:any processContents="skip"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>
        
        <xsd:element name="terminal" type="bgf:terminal"/>

        <xsd:element name="nonterminal">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element ref="bgf:production"/>
              <xsd:element ref="ltr:tree"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>

        <xsd:element name="selectable">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element name="selector" type="bgf:selector"/>
              <xsd:element ref="ltr:tree"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>
        
        <xsd:element name="sequence">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element ref="ltr:tree" minOccurs="0" maxOccurs="unbounded"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>
        
        <xsd:element name="choice">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element ref="bgf:expression"/>
              <xsd:element ref="ltr:tree"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>

        <xsd:element name="optional">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element ref="ltr:tree" minOccurs="0" maxOccurs="1"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>

        <xsd:element name="plus">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element ref="ltr:tree" minOccurs="1" maxOccurs="unbounded"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>

        <xsd:element name="star">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element ref="ltr:tree" minOccurs="0" maxOccurs="unbounded"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>
        
      </xsd:choice>
    </xsd:complexType>
  </xsd:element>
  
</xsd:schema>