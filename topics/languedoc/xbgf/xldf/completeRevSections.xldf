  <!-- beautify xbgf -->
  <xldf:transform-grammar>
    <target>element-define</target>
    <xbgf:project>
      <bgf:production>
        <nonterminal>define</nonterminal>
        <bgf:expression>
          <sequence>
            <bgf:expression>
              <plus>
                <bgf:expression>
                  <nonterminal>production</nonterminal>
                </bgf:expression>
              </plus>
            </bgf:expression>
            <bgf:expression>
              <marked>
                <bgf:expression>
                  <selectable>
                    <selector>tag</selector>
                    <bgf:expression>
                      <value>string</value>
                    </bgf:expression>
                  </selectable>
                </bgf:expression>
              </marked>
            </bgf:expression>
          </sequence>
        </bgf:expression>
      </bgf:production>
    </xbgf:project>
  </xldf:transform-grammar>
  <xldf:transform-grammar>
    <target>element-inject</target>
