  </xldf:transform-grammar>
  <xldf:transform-grammar>
    <target>element-replace</target>
    <xbgf:project>
      <bgf:production>
        <nonterminal>replace</nonterminal>
        <bgf:expression>
          <sequence>
            <bgf:expression>
              <nonterminal>expression</nonterminal>
            </bgf:expression>
            <bgf:expression>
              <nonterminal>expression</nonterminal>
            </bgf:expression>
            <bgf:expression>
              <optional>
                <bgf:expression>
                  <selectable>
                    <selector>in</selector>
                    <bgf:expression>
                      <nonterminal>scope</nonterminal>
                    </bgf:expression>
                  </selectable>
                </bgf:expression>
              </optional>
            </bgf:expression>
            <bgf:expression>
              <marked>
                <bgf:expression>
                  <selectable>
                    <selector>tag</selector>
                    <bgf:expression>
                      <value>string</value>
                    </bgf:expression>
                  </selectable>
                </bgf:expression>
              </marked>
            </bgf:expression>
          </sequence>
        </bgf:expression>
      </bgf:production>
    </xbgf:project>
  </xldf:transform-grammar>

