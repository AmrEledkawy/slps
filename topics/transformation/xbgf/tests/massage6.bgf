<bgf:grammar xmlns:bgf="http://planet-sl.org/bgf">
  <bgf:production>
    <nonterminal>A</nonterminal>
    <bgf:expression>
      <choice>
        <bgf:expression>
          <optional>
            <bgf:expression>
              <nonterminal>X</nonterminal>
            </bgf:expression>
          </optional>
        </bgf:expression>
        <bgf:expression>
          <plus>
            <bgf:expression>
              <nonterminal>X</nonterminal>
            </bgf:expression>
          </plus>
        </bgf:expression>
      </choice>
    </bgf:expression>
  </bgf:production>
</bgf:grammar>
