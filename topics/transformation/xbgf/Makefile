build:
	cd apps/bgf; make build
	cd apps/xbgf; make build
	cd apps/btf; make build
	cd apps/lcf; make build
	cd apps/fl; make build

rebuild:
	make clean
	make build

test:
	cd apps/bgf; make test
	cd apps/xbgf; make test
	cd apps/btf; make test
	cd apps/lcf; make test
	cd apps/fl; make test

clean:
	rm -f *~
	cd apps/bgf; make clean
	cd apps/xbgf; make clean
	cd apps/btf; make clean
	cd apps/lcf; make clean
	cd apps/fl; make clean

